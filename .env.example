# Frog Adventure Web Environment Configuration

# Server Configuration
PORT=4567
HOST=0.0.0.0
RACK_ENV=development

# Session Configuration
SESSION_SECRET=your-secret-key-here-at-least-64-chars

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=5

# LLM Configuration
LLM_PROVIDER=openai
LLM_API_KEY=your-llm-api-key-here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.8
LLM_MAX_TOKENS=1000

# Game Configuration
GAME_SESSION_TIMEOUT=3600
GAME_MAX_ACTIVE_SESSIONS=1000

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=true

# Security Configuration
FORCE_SSL=false
CORS_ORIGINS=*
SERVE_STATIC_FILES=true

# Logging Configuration
LOG_LEVEL=info